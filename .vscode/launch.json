{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zad12",  // ścieżka do programu
            "args": ["h.txt"],  // argumenty przekazywane do programu
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // czy uruchamiać w zewnętrznej konsoli
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // ścieżka do gdb
            "setupCommands": [
                {
                    "description": "Włączenie formatowania dla gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // opcjonalnie, zadanie budowania przed uruchomieniem
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
